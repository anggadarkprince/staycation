<%- include('../../partials/head.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('../../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h4 mb-3 text-gray-800">Edit Bank</h1>

                <%- include('../../partials/alert.ejs') %>

                <form action="/admin/bank/update/<%= bank._id %>" method="post">
                    <input type="hidden" name="_method" value="put">
                    <fieldset>
                        <div class="card shadow border-0 mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Edit Category</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="bank">Bank Name</label>
                                    <input type="text" class="form-control" id="bank" name="bank" required maxlength="50"
                                           placeholder="Enter bank" value="<%= _old.bank || bank.bank %>">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="account_holder">Account Holder</label>
                                            <input type="text" class="form-control" id="account_holder" name="account_holder" required maxlength="50"
                                                   placeholder="Account holder name" value="<%= _old.account_holder || bank.accountHolder %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="account_number">Account Number</label>
                                            <input type="text" class="form-control" id="account_number" name="account_number" required maxlength="50"
                                                   placeholder="Account holder name" value="<%= _old.account_number || bank.accountNumber %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Logo</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile">Pick Image</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" id="description" name="description" maxlength="500"
                                              placeholder="Enter bank description"><%= _old.description || bank.description %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card shadow border-0 mb-4">
                            <div class="card-body d-flex justify-content-between">
                                <button onclick="history.back()" type="button" class="btn btn-light">Back</button>
                                <button type="submit" class="btn btn-primary" data-toggle="one-touch">Update Bank</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<%- include('../../partials/js.ejs') %>