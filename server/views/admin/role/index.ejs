<%- include('../../partials/head.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('../../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="h4 mb-md-0 text-gray-800">Role</h1>
                    <a href="/admin/role/create" class="btn btn-sm btn-primary shadow-sm">
                        Create Role
                    </a>
                </div>

                <%- include('../../partials/alert.ejs') %>
                
                <div class="card shadow border-0 mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Role Data</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-hover" id="dataTable">
                            <thead>
                            <tr>
                                <th style="width: 35px">No</th>
                                <th>Role</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th class="text-md-right" style="max-width: 80px">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for (const [i, role] of roles.entries()) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= role.role %></td>
                                    <td class="text-truncate" style="max-width: 200px"><%= role.description || '-' %></td>
                                    <td><%= moment(role.createdAt).format('DD MMMM Y HH:mm') %></td>
                                    <td class="text-md-right">
                                        <div class="dropdown">
                                            <button class="btn btn-primary btn-sm dropdown-toggle btn-action" type="button" data-toggle="dropdown">
                                                Action
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="/admin/role/view/<%= role._id %>">
                                                    View
                                                </a>
                                                <a class="dropdown-item" href="/admin/role/edit/<%= role._id %>">
                                                    Edit
                                                </a>
                                                <div class="dropdown-divider"></div>
                                                <button class="dropdown-item btn-delete" data-toggle="modal"
                                                        data-title="Bank" data-label="<%= role.role %>"
                                                        data-url="/admin/role/delete/<%= role._id %>">
                                                    Delete
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Role</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th class="text-md-right">Action</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <%- include('../../partials/delete.ejs') %>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<%- include('../../partials/js.ejs') %>