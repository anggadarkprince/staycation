<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('../../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h1 class="h4 mb-md-0 text-gray-800">Category</h1>
                    <a href="/admin/category/create" class="btn btn-sm btn-primary shadow-sm">
                        Create Category
                    </a>
                </div>
                <p class="mb-4">List of group hotels and apartment in Staycation platform.</p>

                <%- include('../../partials/alert.ejs') %>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Category Data</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th style="width: 35px">No</th>
                                <th>Category</th>
                                <th>Total Item</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th class="text-md-right" style="max-width: 80px">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for (const [i, category] of categories.entries()) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= category.category %></td>
                                    <td>0</td>
                                    <td class="text-truncate" style="max-width: 200px"><%= category.description || '-' %></td>
                                    <td><%= (new Date(category.createdAt)).toDateString() %></td>
                                    <td class="text-md-right">
                                        <div class="dropdown">
                                            <button class="btn btn-primary btn-sm dropdown-toggle btn-action" type="button" data-toggle="dropdown">
                                                Action
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="/admin/category/view/<%= category._id %>">
                                                    View
                                                </a>
                                                <a class="dropdown-item" href="/admin/category/edit/<%= category._id %>">
                                                    Edit
                                                </a>
                                                <div class="dropdown-divider"></div>
                                                <button class="dropdown-item btn-delete" data-toggle="modal"
                                                        data-title="Category" data-label="<%= category.category %>"
                                                        data-url="/admin/category/delete/<%= category._id %>">
                                                    Delete
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Category</th>
                                <th>Total Item</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th class="text-md-right" style="max-width: 80px">Action</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <%- include('../../partials/delete.ejs') %>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/js.ejs') %>