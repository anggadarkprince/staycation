<%- include('../partials/head.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="mb-3">
                    <%- include('../partials/breadcrumb.ejs', {breadcrumb: [
                        {title: 'Activity Log', url: '/activity-loca'},
                        {title: 'View', url: '/activity-log/view/' + log.id},
                    ]}) %>
                </div>

                <%- include('../partials/alert.ejs') %>

                <div class="card shadow border-0 mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2 mb-md-0 row">
                                    <p class="col-sm-4 col-form-label pb-0 font-weight-bold">Name</p>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">
                                            <%= log.userId.name %>
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group mb-2 mb-md-0 row">
                                    <label class="col-sm-4 col-form-label pb-0 font-weight-bold">Log Type</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">
                                            <%= log.type || 'No type' %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-2 mb-md-0 row">
                                    <label class="col-sm-4 col-form-label pb-0 font-weight-bold">IP</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">
                                            <%= log.ip || 'No IP' %>
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group mb-2 mb-md-0 row">
                                    <p class="col-sm-4 col-form-label pb-0 font-weight-bold">Created At</p>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">
                                            <%= moment(log.time).format('DD MMMM Y HH:mm') %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow border-0 mb-4">
                    <div class="card-body">
                        <div class="form-group mb-2 mb-md-0 row">
                            <p class="col-sm-3 col-md-2 col-form-label pb-0 font-weight-bold">User Agent</p>
                            <div class="col-sm-9 col-md-10">
                                <pre class="form-control-plaintext"><%- JSON.stringify(log.userAgent, null, 4) %></pre>
                            </div>
                        </div>
                        <div class="form-group mb-2 mb-md-0 row">
                            <p class="col-sm-3 col-md-2 col-form-label pb-0 font-weight-bold">Data</p>
                            <div class="col-sm-9 col-md-10">
                                <pre class="form-control-plaintext"><%- JSON.stringify(log.data, null, 4) %></pre>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow border-0 mb-4">
                    <div class="card-body d-flex justify-content-between">
                        <button onclick="history.back()" type="button" class="btn btn-light">Back</button>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<%- include('../partials/js.ejs') %>
