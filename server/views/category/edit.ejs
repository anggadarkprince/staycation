<%- include('../partials/head.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include('../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="mb-3">
                    <%- include('../partials/breadcrumb.ejs', {breadcrumb: [
                        {title: 'Category', url: '/category'},
                        {title: 'Edit', url: '/category/edit/' + category.id},
                    ]}) %>
                </div>

                <%- include('../partials/alert.ejs') %>

                <form action="/category/update/<%= category._id %>" method="post">
                    <input type="hidden" name="_csrf" value="<%= _csrfToken %>">
                    <input type="hidden" name="_method" value="put">
                    <fieldset>
                        <div class="card shadow border-0 mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Edit Category</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="category">Category Name</label>
                                    <input type="text" class="form-control" id="category" name="category" required maxlength="50"
                                           placeholder="Enter category" value="<%= _old.category || category.category %>">
                                    <%- validationError('category') %>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" id="description" name="description" maxlength="500"
                                              placeholder="Enter category description"><%= _old.description || category.description %></textarea>
                                    <%- validationError('description') %>
                                </div>
                            </div>
                        </div>
                        <div class="card shadow border-0 mb-4">
                            <div class="card-body d-flex justify-content-between">
                                <button onclick="history.back()" type="button" class="btn btn-light">Back</button>
                                <button type="submit" class="btn btn-primary" data-toggle="one-touch">Update Category</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<%- include('../partials/js.ejs') %>
